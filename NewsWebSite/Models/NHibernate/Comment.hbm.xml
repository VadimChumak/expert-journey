<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="NewsWebSite" namespace="NewsWebSite.Models">
  <class name="Comment" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" type="int">
      <generator class="native" />
    </id>
    <property name="Text" type="string" />
    <property name="ArticleId" />
    <property name="Depth" />
    <property name="ReplyCommentId" />
    <property name="Created" />
  </class>
</hibernate-mapping>